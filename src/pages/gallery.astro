---
import "@fancyapps/ui/dist/fancybox/fancybox.css";
import Heading from "../components/Heading.astro";
import Layout from "../layouts/Layout.astro";
import Card from "../components/gallery/Card.astro";
---

<Layout title="Ümumi foto qalereya">
  <Heading title="Ümumi foto qalereya" />
  <section
    class="py-20 container grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 2xl:grid-cols-6 gap-1.5"
  >
    <Card />
    <Card />
    <Card />
    <Card />
    <Card />
    <Card />
  </section>
</Layout>
<script>
  import { Fancybox } from "@fancyapps/ui/dist/fancybox/";

  Fancybox.bind("[data-fancybox='gallery']", {
    Carousel: {
      Toolbar: {
        display: {
          left: ["counter"],
          middle: [],
          right: [
            "zoomIn",
            "zoomOut",
            "autoplay",
            "fullscreen",
            "thumbs",
            "download",
            "close",
          ],
        },
      },
    },
  });
</script>
