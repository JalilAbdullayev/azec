---
import Mission from "./Mission.astro";
import "swiper/css/bundle";

interface Props {
  className?: string;
}

const { className }: Props = Astro.props;
---

<section class={"py-20 " + className}>
  <div class="container flex flex-col gap-6">
    <div class="flex flex-col gap-6">
      <div class="flex flex-col gap-6">
        <h2 class="text-primary text-4xl font-bold">Missiya & Hədəflərimiz</h2>
        <hr class="h-1.5 w-9 border-0 bg-tertiary rounded" />
      </div>
    </div>
    <div id="goals-swiper" class="overflow-hidden flex flex-col gap-13 mt-5">
      <div class="swiper-wrapper">
        <Mission number={1} />
        <Mission number={2} />
        <Mission number={3} />
        <Mission number={4} />
      </div>
      <div class="flex items-center gap-2.5">
        <button
          type="button"
          class="swiper-button-prev static! border-2 border-tertiary size-12! rounded-full after:hidden hover:bg-tertiary active:bg-tertiary transition-all disabled:bg-tertiary disabled:text-white disabled:[&>i]:text-white"
        >
          <i class="fa-solid fa-angle-left text-primary"></i>
        </button>
        <button
          type="button"
          class="swiper-button-next static! border-2 border-tertiary size-12! rounded-full after:hidden hover:bg-tertiary active:bg-tertiary transition-all disabled:bg-tertiary disabled:text-white disabled:[&>i]:text-white"
        >
          <i class="fa-solid fa-angle-right text-primary"></i>
        </button>
      </div>
    </div>
  </div>
</section>

<script>
  import { Swiper } from "swiper";
  import { Navigation } from "swiper/modules";

  new Swiper("#goals-swiper", {
    grabCursor: true,
    modules: [Navigation],
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
    breakpoints: {
      992: {
        slidesPerView: 4,
      },
      576: {
        slidesPerView: 2,
      },
    },
  });
</script>
