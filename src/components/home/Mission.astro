---
interface Props {
  number: number;
}

const { number }: Props = Astro.props;
---

<div class="swiper-slide">
  <div class="flex flex-col gap-6">
    <div class="text-3xl text-tertiary font-semibold">{number}</div>
    <div class="flex items-center">
      <span class="size-4 bg-tertiary rounded-full block"></span>
      <hr class="border-0 bg-black/15 h-px w-full" />
    </div>
    <div class="flex flex-col gap-2.5">
      <h3 class="text-lg font-bold text-primary">İnkişaf</h3>
      <div class="text-dark text-base pe-7.5">
        Ölkəmizdə Endokrinologiya və Metobolizma xəstəlikləri sahəsində bilik və
        təcrübəni fərdi-klinik səviyyədən, beynəlxalq səviyyəyə çatdırmaq
      </div>
    </div>
  </div>
</div>
