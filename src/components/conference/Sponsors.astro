---
import SponsorSlide from "../home/SponsorSlide.astro";
import "swiper/css/bundle";
---

<section class="py-20 container">
  <div class="flex flex-col items-center gap-6">
    <h2 class="text-primary text-4xl font-bold">Sponsor & Tərəfdaşlar</h2>
    <hr class="bg-tertiary w-9 h-1.5 border-0 rounded" />
  </div>
  <div id="sponsor-swiper" class="overflow-hidden mt-5">
    <div class="swiper-wrapper">
      <SponsorSlide />
      <SponsorSlide />
      <SponsorSlide />
      <SponsorSlide />
      <SponsorSlide />
      <SponsorSlide />
    </div>
  </div>
</section>

<script>
  import Swiper from "swiper";

  new Swiper("#sponsor-swiper", {
    grabCursor: true,
    spaceBetween: 40,
    breakpoints: {
      1600: {
        slidesPerView: 5,
      },
      1200: {
        slidesPerView: 4,
      },
      992: {
        slidesPerView: 3,
      },
      768: {
        slidesPerView: 2,
      },
      576: {
        slidesPerView: 1,
      },
    },
  });
</script>
