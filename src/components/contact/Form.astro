<form action="" method="POST" class="grid md:grid-cols-2 gap-y-5 gap-x-7">
  <input
    type="text"
    name="first-name"
    placeholder="Adınız"
    required
    maxlength="255"
    class="text-sm bg-neutral-100 py-4 px-7 rounded outline-0 border-2 border-white focus:border-secondary focus:bg-white transition-all h-12 text-primary-dark"
  />
  <input
    type="text"
    name="last-name"
    placeholder="Soyadınız"
    required
    maxlength="255"
    class="text-sm bg-neutral-100 py-4 px-7 rounded outline-0 border-2 border-white focus:border-secondary focus:bg-white transition-all h-12 text-primary-dark"
  />
  <input
    type="tel"
    name="phone"
    placeholder="Telefon nömrəniz"
    required
    maxlength="255"
    class="text-sm bg-neutral-100 py-4 px-7 rounded outline-0 border-2 border-white focus:border-secondary focus:bg-white transition-all h-12 text-primary-dark"
  />
  <input
    type="email"
    name="email"
    placeholder="E-mail"
    required
    maxlength="255"
    class="text-sm bg-neutral-100 py-4 px-7 rounded outline-0 border-2 border-white focus:border-secondary focus:bg-white transition-all h-12 text-primary-dark"
  />
  <textarea
    name="message"
    placeholder="Mesajınız"
    required
    class="md:col-span-2 text-sm bg-neutral-100 py-4 px-7 rounded outline-0 border-2 border-white focus:border-secondary focus:bg-white transition-all min-h-30 text-primary-dark"
  ></textarea>
  <button
    type="submit"
    class="bg-secondary text-white py-2.5 px-6 rounded-[50px] w-fit cursor-pointer hover:bg-primary transition-all text-sm"
  >
    Göndər <i class="fa-solid fa-arrow-right"></i>
  </button>
</form>
